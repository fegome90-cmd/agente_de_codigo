# Claude API Configuration
ANTHROPIC_API_KEY=your-claude-api-key-here

# GLM API Configuration
GLM_API_KEY=your-glm-api-key-here

# MemTech Configuration (compatible with startkit-main)
# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here

# Database Configuration (L2)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/memory_verification
# Alternative: Individual PostgreSQL variables
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=memory_verification
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration (L1)
REDIS_URL=redis://localhost:6379

# ChromaDB Configuration (L3)
CHROMA_API_KEY=your_chroma_api_key_here
CHROMA_TENANT=your_tenant_name
CHROMA_DATABASE=your_database_name
MEMTECH_L3_ENABLED=true

# Memory System
MEMTECH_MEMORY_STORAGE_PATH=./data
MEMTECH_MEMORY_MAX_MB=1024
MEMTECH_MEMORY_LOG_LEVEL=INFO
MEMTECH_MEMORY_CACHE_SIZE=1000

# Security
ENCRYPTION_KEY=your-encryption-key-here

# Server Configuration
MEMTECH_SERVER_HOST=0.0.0.0
MEMTECH_SERVER_PORT=8080
MEMTECH_METRICS_ENABLED=false

# Development Settings
NODE_ENV=development
LOG_LEVEL=info

# Agent Configuration
AGENT_TIMEOUT=120000
MAX_CONCURRENT_AGENTS=5

# Quality Gates
SECURITY_CRITICAL_THRESHOLD=0
SECURITY_HIGH_THRESHOLD=2
QUALITY_ERRORS_THRESHOLD=0
QUALITY_WARNINGS_THRESHOLD=10