{
  "name": "@pit-crew/documentation-agent",
  "version": "1.0.0",
  "description": "Documentation analysis agent for OpenAPI specs, breaking changes, and changelog generation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/documentation-agent.ts",
    "build": "tsc",
    "start": "node dist/documentation-agent.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist coverage",
    "standalone": "tsx src/documentation-agent.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@apidevtools/swagger-parser": "^10.1.0",
    "dotenv": "^16.4.5",
    "semver": "^7.6.0",
    "simple-git": "^3.22.0",
    "socket.io-client": "^4.7.5",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.4.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/semver": "^7.5.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "documentation",
    "openapi",
    "breaking-changes",
    "changelog",
    "api-analysis",
    "pit-crew"
  ]
}