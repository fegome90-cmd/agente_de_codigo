{
  "name": "@pit-crew/security-agent",
  "version": "1.0.0",
  "description": "Security analysis agent for Pit Crew multi-agent system",
  "main": "src/security_agent.py",
  "scripts": {
    "start": "python3 src/security_agent.py",
    "start:dev": "PYTHONPATH=./src python3 src/security_agent.py",
    "test": "python3 -m pytest tests/ -v",
    "lint": "flake8 src/ --max-line-length=100 --ignore=E501",
    "format": "black src/ --line-length=100",
    "type-check": "mypy src/ --ignore-missing-imports",
    "clean": "find . -type d -name __pycache__ -exec rm -rf {} + 2>/dev/null || true"
  },
  "dependencies": {},
  "devDependencies": {},
  "engines": {
    "python": ">=3.8.0"
  },
  "keywords": [
    "security",
    "sast",
    "vulnerability",
    "secrets",
    "dependencies",
    "pit-crew"
  ],
  "author": "Felipe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipe/pit-crew-multi-agent.git"
  }
}