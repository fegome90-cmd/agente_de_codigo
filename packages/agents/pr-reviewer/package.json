{
  "name": "@pit-crew/pr-reviewer-agent",
  "version": "1.0.0-simplified",
  "description": "PR Reviewer Agent - Simplified meta-agent that synthesizes findings from other agents",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "demo": "tsx src/index.ts --demo",
    "demo:build": "npm run build && node dist/index.js --demo",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "pr-review",
    "code-review",
    "meta-agent",
    "synthesis",
    "pit-crew",
    "multi-agent",
    "quality-gates",
    "simplified"
  ],
  "author": "Pit Crew Team",
  "license": "MIT",
  "dependencies": {
    "@pit-crew/shared": "workspace:^",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pit-crew/pr-reviewer-agent.git"
  },
  "bugs": {
    "url": "https://github.com/pit-crew/pr-reviewer-agent/issues"
  },
  "homepage": "https://github.com/pit-crew/pr-reviewer-agent#readme"
}