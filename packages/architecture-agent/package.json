{
  "name": "@pit-crew/architecture-agent",
  "version": "1.0.0",
  "description": "Architecture analysis agent for layering violations, DRY analysis, and code structure validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@pit-crew/shared": "workspace:*",
    "tree-sitter": "^0.22.4",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "^0.23.2",
    "tree-sitter-javascript": "^0.23.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "yaml": "^2.3.4",
    "js-yaml": "^4.1.0",
    "cosine-similarity": "^1.0.1",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "architecture",
    "code-analysis",
    "layering",
    "dry-violations",
    "ast-parsing",
    "tree-sitter",
    "pit-crew",
    "multi-agent"
  ],
  "author": "Pit Crew Multi-Agent System",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
