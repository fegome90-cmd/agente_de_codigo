{
  "name": "@pit-crew/quality-agent",
  "version": "1.0.0",
  "description": "Quality Agent - Code quality analysis with ESLint, Ruff integration and SARIF output",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rimraf dist",
    "test": "tsx test/**/*.test.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "quality-agent",
    "code-quality",
    "eslint",
    "ruff",
    "sarif",
    "pit-crew",
    "multi-agent"
  ],
  "author": "Pit Crew Team",
  "license": "MIT",
  "dependencies": {
    "@pit-crew/shared": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "rimraf": "^5.0.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}