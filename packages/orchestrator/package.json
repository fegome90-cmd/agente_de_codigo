    "@pit-crew/shared": "workspace:*",
    "@pm2/io": "^6.0.1",
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "generic-pool": "^3.9.0",
    "ioredis": "^5.8.2",
    "langchain": "^0.2.9",
    "node-cron": "^3.0.3",
    "pm2": "^5.3.0",
    "semver": "^7.6.0",
    "simple-git": "^3.22.0",
    "socket.io": "^4.7.5",
